<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/frame"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="16dp">

        <RelativeLayout
            android:id="@+id/view_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A01313">

            <ImageView
                android:id="@+id/delete_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_delete_white_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/delete_icon"
                android:textColor="@android:color/white"
                android:textSize="13dp"
                android:text="Delete"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/view_foreground"
            android:background="@android:color/white"
            android:padding="10dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/thumbnail"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/contacto"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nombreAlumno"
                android:layout_toRightOf="@+id/thumbnail"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:textColor="#000000"
                android:textSize="17sp"
                android:text="nombre"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/noControl"
                android:layout_below="@+id/nombreAlumno"
                android:layout_toRightOf="@+id/thumbnail"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:textSize="12sp"
                android:text="numero"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cel"
                android:layout_below="@+id/noControl"
                android:layout_toRightOf="@+id/thumbnail"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:textSize="12sp"
                android:text="u1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/carrera"
                android:layout_below="@+id/cel"
                android:layout_toRightOf="@+id/thumbnail"
                android:textColor="#000000"
                android:textSize="12sp"
                android:text="u2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/u3"
                android:layout_below="@+id/carrera"
                android:layout_toRightOf="@+id/thumbnail"
                android:textColor="#000000"
                android:textSize="12sp"
                android:text="u3"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>